@model Vid.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@if (!Model.Movies.Any())
{
    <p>No Movies Added</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <th>Movie</th>
        <th>Genre</th>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

